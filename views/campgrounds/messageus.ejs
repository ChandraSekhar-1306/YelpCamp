<% layout('layouts/boilerplate') %>
    <div class="row">
        <h2 class="text-center">Contact Us</h2>
        <div class="col-6 offset-4 mb-3" style="margin-top: 30px;">
            <form action="https://formspree.io/f/mknabyll" method="POST" class="validated-form" novalidate>

                <div class="email">
                    <label class="form-label">
                        Your email:
                        <input type="email" name="email" class="form-control mb-3" required style="width:400px">
                    </label>

                </div>

                <div class="message">

                    <label class="form-label">
                        Your message:
                        <textarea name="message" class="form-control mb-3" required style="width: 400px;"></textarea>
                    </label>

                </div>

                <!-- your other form fields go here -->
                <button type="submit" class="btn btn-success">Send</button>
            </form>
        </div>
    </div>